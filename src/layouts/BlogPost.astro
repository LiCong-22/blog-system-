---
import Layout from './Layout.astro';
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'posts'>['data'];

const { title, description, pubDate, updatedDate, tags, password } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('zh-CN', {
	year: 'numeric',
	month: 'long',
	day: 'numeric',
});

const readingTime = Math.ceil(title.length / 10 + description.length / 20 + 3);

// 获取文章 ID（用于本地存储 key）
const postId = Astro.url.pathname.split('/').filter(Boolean).pop() || '';
---

<Layout title={title} description={description}>
	{!password ? (
		<!-- 无密码保护的文章 -->
		<article>
			<header class="post-header">
				<h1>{title}</h1>
				<div class="meta">
					<span class="date">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
							<line x1="16" y1="2" x2="16" y2="6"></line>
							<line x1="8" y1="2" x2="8" y2="6"></line>
							<line x1="3" y1="10" x2="21" y2="10"></line>
						</svg>
						{formattedDate}
					</span>
					<span class="separator">•</span>
					<span class="read-time">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<circle cx="12" cy="12" r="10"></circle>
							<polyline points="12 6 12 12 16 14"></polyline>
						</svg>
						约 {readingTime} 分钟阅读
					</span>
				</div>
				{tags.length > 0 && (
					<div class="tags">
						{tags.map(tag => (
							<a href={`/tags/${tag}`} class="tag">#{tag}</a>
						))}
					</div>
				)}
			</header>

			<div class="article-container">
				<aside class="toc">
					<h3>目录</h3>
					<nav id="toc-nav"></nav>
				</aside>
				<div class="content">
					<slot />
				</div>
			</div>
		</article>
	) : (
		<!-- 密码保护的文章 -->
		<article>
			<header class="post-header">
				<h1>{title}</h1>
				<div class="meta">
					<span class="date">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
							<line x1="16" y1="2" x2="16" y2="6"></line>
							<line x1="8" y1="2" x2="8" y2="6"></line>
							<line x1="3" y1="10" x2="21" y2="10"></line>
						</svg>
						{formattedDate}
					</span>
					<span class="separator">•</span>
					<span class="read-time">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<circle cx="12" cy="12" r="10"></circle>
							<polyline points="12 6 12 12 16 14"></polyline>
						</svg>
						约 {readingTime} 分钟阅读
					</span>
				</div>
				{tags.length > 0 && (
					<div class="tags">
						{tags.map(tag => (
							<a href={`/tags/${tag}`} class="tag">#{tag}</a>
						))}
					</div>
				)}
			</header>
			<div class="article-container">
				<aside class="toc">
					<h3>目录</h3>
					<nav id="toc-nav-locked"></nav>
				</aside>
				<div class="content" id="locked-content" style="display: none;">
					<slot />
				</div>
			</div>
		</article>

		<!-- 密码输入界面 -->
		<div id="password-form" class="locked-container">
			<div class="locked-box">
				<svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
					<path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
				</svg>
				<h2>此文章受密码保护</h2>
				<p>请输入密码访问</p>
				<input type="password" id="post-password" placeholder="输入密码" />
				<button id="unlock-btn">解锁</button>
				<p id="error-msg" class="error"></p>
			</div>
		</div>

		<!-- 密码数据（隐藏） -->
		<span id="password-data" data-password={password} data-postid={postId} style="display: none;"></span>
	)}
</Layout>

<script>
	// 检查是否有密码保护
	const passwordData = document.getElementById('password-data');
	if (passwordData) {
		const password = passwordData.dataset.password;
		const postId = passwordData.dataset.postid;
		const storedPassword = localStorage.getItem('unlocked_' + postId);

		if (storedPassword === password) {
			document.getElementById('locked-content').style.display = 'block';
			document.getElementById('password-form').style.display = 'none';
		} else {
			document.getElementById('locked-content').style.display = 'none';
			document.getElementById('password-form').style.display = 'flex';
		}

		document.getElementById('unlock-btn').addEventListener('click', function() {
			const input = document.getElementById('post-password');
			if (input.value === password) {
				localStorage.setItem('unlocked_' + postId, password);
				document.getElementById('locked-content').style.display = 'block';
				document.getElementById('password-form').style.display = 'none';
			} else {
				document.getElementById('error-msg').textContent = '密码错误，请重试';
			}
		});

		document.getElementById('post-password').addEventListener('keypress', function(e) {
			if (e.key === 'Enter') {
				document.getElementById('unlock-btn').click();
			}
		});
	}
</script>

<script>
	// 生成目录
	document.addEventListener('DOMContentLoaded', function() {
		const tocNavId = document.getElementById('toc-nav') ? 'toc-nav' : 'toc-nav-locked';
		const tocNav = document.getElementById(tocNavId);
		const content = document.querySelector('.content');

		if (content && tocNav) {
			const headings = content.querySelectorAll('h2, h3');
			const ul = document.createElement('ul');

			if (headings.length > 0) {
				tocNav.style.display = 'block';
				ul.innerHTML = '';

				const topLi = document.createElement('li');
				topLi.innerHTML = '<a href="#" onclick="event.preventDefault(); window.scrollTo({top: 0});">顶部</a>';
				ul.appendChild(topLi);

				headings.forEach((heading, index) => {
					const id = heading.id || 'heading-' + index;
					heading.id = id;

					const li = document.createElement('li');
					const a = document.createElement('a');
					a.href = '#' + id;
					a.textContent = heading.textContent || '';
					a.style.paddingLeft = heading.tagName === 'H3' ? '1.5rem' : '0.5rem';

					li.appendChild(a);
					ul.appendChild(li);
				});

				tocNav.appendChild(ul);

				// 高亮当前阅读位置
				const observer = new IntersectionObserver(function(entries) {
					entries.forEach(function(entry) {
						if (entry.isIntersecting) {
							ul.querySelectorAll('a').forEach(function(a) { a.classList.remove('active'); });
							const activeLink = ul.querySelector('a[href="#' + entry.target.id + '"]');
							if (activeLink) activeLink.classList.add('active');
						}
					});
				}, { rootMargin: '-20% 0px -60% 0px' });

				headings.forEach(function(h) { observer.observe(h); });
			}
		}
	});
</script>

<style>
	.post-header {
		margin-bottom: 2rem;
		padding-bottom: 1.5rem;
		border-bottom: 1px solid var(--border);
	}

	.post-header h1 {
		font-size: 2rem;
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	.meta {
		display: flex;
		align-items: center;
		gap: 1rem;
		color: var(--gray);
		font-size: 0.9rem;
		margin-bottom: 1rem;
	}

	.meta span {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.separator {
		color: var(--border);
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.tag {
		display: inline-block;
		background: #eff6ff;
		color: var(--primary);
		padding: 0.25rem 0.75rem;
		border-radius: 9999px;
		font-size: 0.85rem;
		text-decoration: none;
		transition: background 0.2s;
	}

	.tag:hover {
		background: #dbeafe;
	}

	.article-container {
		position: relative;
	}

	.toc {
		position: fixed;
		left: calc(50% - 620px);
		top: 6rem;
		width: 220px;
		max-height: calc(100vh - 8rem);
		padding: 1rem 1.5rem;
		background: #f8fafc;
		border-radius: 12px;
		display: none;
		overflow-y: auto;
	}

	.toc h3 {
		font-size: 0.875rem;
		color: var(--gray);
		margin-bottom: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		position: sticky;
		top: 0;
		background: #f8fafc;
		padding-bottom: 0.5rem;
	}

	.toc ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.toc li {
		margin-bottom: 0.5rem;
	}

	.toc a {
		color: var(--gray);
		text-decoration: none;
		font-size: 0.875rem;
		display: block;
		padding: 0.25rem 0.5rem;
		border-radius: 4px;
		transition: all 0.2s;
	}

	.toc a:hover {
		color: var(--primary);
		background: #eff6ff;
	}

	.toc a.active {
		color: var(--primary);
		background: #eff6ff;
		font-weight: 500;
	}

	.content {
		line-height: 1.8;
		min-width: 0;
	}

	.content :global(h2) {
		font-size: 1.5rem;
		margin: 2.5rem 0 1rem;
		padding-bottom: 0.5rem;
		border-bottom: 1px solid var(--border);
	}

	.content :global(h3) {
		font-size: 1.25rem;
		margin: 2rem 0 0.75rem;
	}

	.content :global(p) {
		margin-bottom: 1rem;
	}

	.content :global(pre) {
		margin: 1.5rem 0;
	}

	.content :global(img) {
		max-width: 100%;
		height: auto;
		border-radius: 8px;
		margin: 1rem 0;
	}

	.post-footer {
		margin-top: 3rem;
		padding-top: 2rem;
		border-top: 1px solid var(--border);
	}

	.share {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.share span {
		color: var(--gray);
	}

	.share a {
		color: var(--gray);
		transition: color 0.2s;
	}

	.share a:hover {
		color: var(--primary);
	}

	/* 密码保护样式 */
	.locked-container {
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 60vh;
	}

	.locked-box {
		text-align: center;
		padding: 3rem;
		background: #f8fafc;
		border-radius: 16px;
		max-width: 400px;
	}

	.locked-box svg {
		color: var(--gray);
		margin-bottom: 1rem;
	}

	.locked-box h2 {
		margin-bottom: 0.5rem;
	}

	.locked-box p {
		color: var(--gray);
		margin-bottom: 1.5rem;
	}

	.locked-box input {
		width: 100%;
		padding: 0.75rem 1rem;
		border: 1px solid var(--border);
		border-radius: 8px;
		font-size: 1rem;
		margin-bottom: 1rem;
		outline: none;
	}

	.locked-box input:focus {
		border-color: var(--primary);
	}

	.locked-box button {
		width: 100%;
		padding: 0.75rem;
		background: var(--primary);
		color: white;
		border: none;
		border-radius: 8px;
		font-size: 1rem;
		cursor: pointer;
		transition: background 0.2s;
	}

	.locked-box button:hover {
		background: #2563eb;
	}

	.error {
		color: #ef4444 !important;
		margin-top: 1rem !important;
		margin-bottom: 0 !important;
	}

	@media (min-width: 1200px) {
		.toc {
			display: block;
		}
	}

	@media (max-width: 1199px) {
		.toc {
			display: none !important;
		}
	}

	@media (max-width: 768px) {
		.post-header h1 {
			font-size: 1.5rem;
		}
	}
</style>
